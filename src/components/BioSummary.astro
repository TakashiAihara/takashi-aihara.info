---
import { Image } from "@astrojs/image/components";

interface Summary {
  content: string;
  emoji: string;
}

interface Props {
  summaries: Summary[];
  withImage: boolean;
}

const { summaries, withImage } = Astro.props;
---

<div>
  <div>
    {
      withImage && (
        <div class="face">
          <Image
            src="/anime_face.png"
            width="120"
            alt="My face, generated by stable-diffusion"
            aspectRatio={4 / 5}
            style="border-radius: 50px;"
          />
          <span class="assertion">Converted by</span>
          <span class="assertion">stable-diffusion</span>
        </div>
      )
    }
  </div>
  <div class="content">
    {
      summaries.map((item) => (
        <p>
          {item.content}
          <span>{item.emoji}</span>
        </p>
      ))
    }
  </div>
</div>

<style>
  div {
    display: flex;
    justify-content: space-between;
    max-width: 500px;
    gap: 0 10px;
  }

  div > div {
    display: block;
    align-items: center;
  }

  p {
    margin: 0;
  }

  span {
    font-size: 22px;
  }

  span.assertion {
    font-size: 8px;
  }

  div.face {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
