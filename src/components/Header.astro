---
import { SITE_TITLE, SNS_SETTINGS } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import HeaderSnsLink from "./HeaderSnsLink.astro";
---

<header>
  <h2>
    {SITE_TITLE}
  </h2>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/bio">Bio</HeaderLink>
    <HeaderLink href="/skills">Skills</HeaderLink>
    <HeaderLink href="/portfolio">Portfolio</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    {SNS_SETTINGS.map(setting => (
      <HeaderSnsLink name={setting.name} href={setting.url}/>
    ))}
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
